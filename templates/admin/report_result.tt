<html>
<head>
	<title>Virtual PBX - reports</title>
	<link rel="stylesheet" type="text/css" media="all" href="/xvb/css/calendar-blue.css"  />
	<link rel="stylesheet" type="text/css" href="/xvb/xvb.css" />
	<link rel="stylesheet" type="text/css" href="/xvb/css/tablesorter.css" />
	<script language="JavaScript" src="/xvb/js/xvb.js"></script>
	<script type="text/javascript" src="/xvb/js/jquery/jquery.min.js"></script>
	<script type="text/javascript" src="/xvb/js/jquery/table-sorter/jquery.tablesorter.min.js"></script> 
	<script type="text/javascript" src="/xvb/js/jquery/calendar/jquery.dynDateTime.min.js"></script>
	<script type="text/javascript" src="/xvb/js/jquery/calendar/lang/calendar-en.min.js"></script>
</head>

<body onLoad="XVBInit()">
	[% IF CGI_ERROR ne '' %]
	<script language="JavaScript" type="text/javascript">
	<!--
		alert('[% CGI_ERROR | html %]')
	//-->
	</script>
	<noscript>[% CGI_ERROR | html %]</noscript>
	[% END %]

	<table width='100%' class='logo'>
		<tr align='left'>
			<td width='10%'>
				<img border='0' width='120' src='/xvb/images/logo-small.png' alt='Virtual PBX' />
			</td>
			<td valign='middle'>
				[% INCLUDE main_menu.tt-inc %]
				[% INCLUDE main_menu.tt-inc-custom %]
			</td>
			<td align='right'>
				<a href='/xvb/XVB-AI.pdf?a=msg_download'><img border='0' src='/xvb/images/help.png' alt='about' /></a>
				[% INCLUDE version.tt %]
			<td>
		</tr>
	</table>
	<center>
	
	<h1>[% REPORT_DATA.NAME | html %] - report result</h1>

	<p>
	<table width='98%'>
		<tr>
			<td align='right'>
				<form method="get" action='?'>
				<input name='action' value='report_run' type='hidden'>
				<input name='report_id' value='[% REPORT_DATA.ID %]' type='hidden'>
				[% IF REPORT_DATA.DATE_START %]
				<script type="text/javascript">
					jQuery(document).ready(function() {
						jQuery("#from_time").dynDateTime({
							showsTime: true,
							ifFormat: "%Y/%m/%d %H:%M",
							align: "TL",
							electric: false,
							singleClick: false,
							button: ".next()"
						});
				});
				</script>
				<input placeholder='From date' size='16' type='text' name='from_time' value='[% FROM_TIME | html %]' id='from_time'>
				<button type="button">...</button>
				&nbsp;
				<script type="text/javascript">
					jQuery(document).ready(function() {
						jQuery("#to_time").dynDateTime({
							showsTime: true,
							ifFormat: "%Y/%m/%d %H:%M",
							align: "TL",
							electric: false,
							singleClick: false,
							button: ".next()"
						});
				});
				</script>
				<input placeholder='To date' size='16' type='text' name='to_time' value='[% TO_TIME | html %]' id='to_time'>
				<button type="button">...</button>
				&nbsp;
				<input value='Run' type='submit'>
				[% ELSE %]
				<a title='run report' href='?action=report_run&report_id=[% REPORT_DATA.ID %]'><img border='0' src='/xvb/images/run.png' alt='run' /></a>&nbsp;&nbsp;
				[% END %]
				&nbsp;
				<a title='get excel table' href='?action=report_run&report_id=[% REPORT_DATA.ID %]&need_excel=1'><img border='0' src='/xvb/images/excel.png' alt='excel' /></a>&nbsp;&nbsp;
				&nbsp;
				<a title='edit report' href='?action=report_info&report_id=[% REPORT_DATA.ID %]'><img border='0' src='/xvb/images/vb_edit.png' alt='edit' /></a>&nbsp;&nbsp;
				&nbsp;
				<a title='delete report' href='?action=report_del&report_id=[% REPORT_DATA.ID %]&from=[% MSG_FROM %]' onclick="return DelConfirm('en')"><img border='0'  src='/xvb/images/vb_del.png' alt='del' /></a>
				</form>
			</td>
		</tr>
	</table>
	</p>

	<p>
	<table width='98%' class='tablesorter' id='report_table'>
		<thead>
		<tr align='center'>
			[% FOREACH h = REPORT_HDR %]
				<th>[% h.name | html %]</th>
			[% END %]
		</tr>
		</thead>

		<tbody>
		[% FOREACH t = REPORT_RESULT %]
		<tr class='nocolor'>
			[% FOREACH rd = t %]
				<td align='[% rd.align | html %]'>[% rd.value | html %]</td>
			[% END %]
		</tr>
		[% END %]
		</tbody>
	
	</table>
	</p>

	<script language='Javascript'>
		$(document).ready(function() 
			{ 
				$("#report_table").tablesorter(); 
			} 
		); 
	</script>

	</center>
	
	[% INCLUDE main_menu2.tt-inc-custom %]
	
	<div id='shadow'><div id='loading'></div></div><div id='center'></div>
	</body>
</html>
