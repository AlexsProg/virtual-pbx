<html>
<!-- $Id: messages_list_all.tt,v 1.59 2014/11/06 20:11:22 gosha Exp $ -->
<head>
	<title>Virtual PBX - All Messages - Ac:[% USER_CREDS.ACCESS_CODE | html %], Ext: [% USER_CREDS.ROOT | html %]</title>

	<link rel="stylesheet" type="text/css" media="all" href="/xvb/css/calendar-blue.css"  />

	[% IF USER_CREDS.CSS_HREF eq '' %]
	<link rel="stylesheet" type="text/css" href="/xvb/xvb.css" />
	[% ELSE %]
	<link rel="stylesheet" type="text/css" href="[% USER_CREDS.CSS_HREF %]" />
	[% END %]
	<script language="JavaScript" src="/xvb/js/xvb.js"></script>
	<script type="text/javascript" src="/xvb/js/jquery/jquery.min.js"></script>
	<script type="text/javascript" src="/xvb/js/jquery/calendar/jquery.dynDateTime.min.js"></script>
	<script type="text/javascript" src="/xvb/js/jquery/calendar/lang/calendar-en.min.js"></script>
</head>

<body onLoad="XVBInit()">
	<table width='100%'>
		<tr align='left'>
			<td>
		[% IF USER_CREDS.ROOT eq '0' %]
				<a href='?action=msg_cleanup&uniq=[% USER_CREDS.UNIQ %]' onclick="return DelConfirm('def','Are you sure you want to delete all messages?')">Delete messages</a>
				&nbsp;&nbsp;|&nbsp;&nbsp;
		[% END %]
				<a href='?action=get_rss_all&id=[% VBOX_PREF.ID %]&uniq=[% USER_CREDS.UNIQ %]'>Rss</a>
				&nbsp;&nbsp;|&nbsp;&nbsp;
				<a href='?action=get_itunes_all&id=[% VBOX_PREF.ID %]&uniq=[% USER_CREDS.UNIQ %]'>Itunes</a>
			</td>
		</tr>
	</table>

	<center>
		
	<h1>All Messages</h1>

	<p>
	<table width='100%'>
		<tr>
			<td align='right'>
				<form method="get" action="[% CGI_URL %]" onSubmit='return checkChanges(this)'>
				<script type="text/javascript">
					jQuery(document).ready(function() {
						jQuery("#from_time").dynDateTime({
							showsTime: true,
							ifFormat: "%Y/%m/%d %H:%M",
							align: "TL",
							electric: false,
							singleClick: false,
							button: ".next()"
						});
				});
				</script>
				<input placeholder='From date' size='16' type='text' name='from_time' value='[% FROM_TIME | html %]' id='from_time'>
				<button type="button">...</button>
				&nbsp;
				<script type="text/javascript">
					jQuery(document).ready(function() {
						jQuery("#to_time").dynDateTime({
							showsTime: true,
							ifFormat: "%Y/%m/%d %H:%M",
							align: "TL",
							electric: false,
							singleClick: false,
							button: ".next()"
						});
				});
				</script>
				<input placeholder='To date' size='16' type='text' name='to_time' value='[% TO_TIME | html %]' id='to_time'>
				<button type="button">...</button>
				<input name='action' value='msg_list_all' type='hidden'>
				<input name='uniq' value='[% USER_CREDS.UNIQ %]' type='hidden'>
				&nbsp;
				<input placeholder='Caller' size='10' type='text' name='caller_id' value='[% CALLER_ID | html %]'>
				&nbsp;
				<input placeholder='Called' size='10' type='text' name='called_id' value='[% CALLED_ID | html %]'>
				&nbsp;
				<input size='8' type='text' placeholder='Duration' name='duration' value='[% DURATION | html %]'>
				&nbsp;
				<select name="msg_type" id='msg_type_selector'>
					<option value="" selected>Message type</option>
					<option value="30:40">User messages</option>
					<option value="1:2:3:4:5:6">System messages</option>
					<option value=",1">Only voice messages</option>
					<option value=",0">Fax / DTMF</option>
					<option value="1">User name</option>
					<option value="2">User greeting</option>
					<option value="3">Follow-Me Announcement</option>
					<option value="4">RetryDial Announcement</option>
					<option value="5">Music on hold</option>
					<option value="6">Fax on Demand</option>
					<option value="30">New user message</option>
					<option value="40">Old user message</option>
				</select>
				&nbsp;
				<input value='Search' type='submit'>
				</form>
				<script langiage='JavaScript'>setActiveSelector('msg_type_selector',"[% MSG_TYPE | html %]");</script>
			</td>
		</tr>
	</table>
	</p>

	<p>
	<table width='95%' id='d-tbl'>
		[% IF MSG_LIST scalar %]
		<tr>
			<th>#</th>
			<th>Ext</th>
			<th>Date</th>
			<th>CallerID</th>
			<th>CalledID</th>
			<th>Duration</th>
			<th>Size</th>
			<th>Actions</th>
			<th>Type</th>
		</tr>
		[% IF MSG_PREV ne '' %]
		<tr>
			<td align='left' colspan='9'>
				<a title='previous page' href='?action=msg_list_all&duration=[% DURATION | html %]&id=[% VBOX_PREF.ID %]&msg_type=[% MSG_TYPE | html %]&from=[% MSG_PREV %]&called_id=[% CALLED_ID | htmlstrict %]&caller_id=[% CALLER_ID | htmlstrict %]&from_time=[% FROM_TIME | html %]&to_time=[% TO_TIME | html %]&uniq=[% USER_CREDS.UNIQ %]'><img border='0'  src='/xvb/images/msg_prev.png' alt='[% MSG_PREV %] &lt;=' /></a>
			</td>
		</tr>
		[% END %]
		[% FOREACH msg = MSG_LIST %]
		<tr class='nocolor' id='d-tr-[% msg.FILE_NAME %]'>
			<td>&nbsp;[% msg.MSG_NUM %]</td>
			<td>&nbsp;<a href='?action=vb_view&id=[% msg.ID | html %]&uniq=[% USER_CREDS.UNIQ %]'>[% msg.EXT_NUMBER | html %]</a></td>
			<td align='center'>[% msg.MSG_DATE | html %]</td>
			<td>[% msg.CALLERID | html %]</td>
			<td>[% msg.CALLEDID | html %]</td>
			[% IF msg.IS_VOICE %]
			<td align='center'>[% msg.DURATION | duration_str | html %]</td>
			[% ELSE %]
			<td align='center'>--------</td>
			[% END %]
			<td align='right'>[% msg.FILE_SIZE | fsize %]&nbsp;</td>
			<td nowrap='nowrap'>
				&nbsp;
				[% IF msg.IS_VOICE %]
					<a title='download imedia' href='https://[% USER_CREDS.DOWNLOAD_IP %][% CGI_URL %]/msg_download/[% msg.ID %]/[% USER_CREDS.ACCESS_CODE %]/[% msg.FILE_NAME %].[% USER_CREDS.SOUND_FORMAT %]?media=[% USER_CREDS.SOUND_FORMAT %]'><img border='0' src='/xvb/images/msg_download.png' alt='download' /></a>
				[% ELSE %]
					<a title='download file' href='https://[% USER_CREDS.DOWNLOAD_IP %][% CGI_URL %]/msg_download/[% msg.ID %]/[% USER_CREDS.ACCESS_CODE %]/[% msg.FILE_NAME %]'><img border='0' src='/xvb/images/msg_download.png' alt='download' /></a>
				[% END %]
					<a title='delete message' href='https://[% USER_CREDS.DOWNLOAD_IP %][% CGI_URL %]?action=msg_delete&msg=[% msg.FILE_NAME %]&type=[% msg.FILE_TYPE %]&id=[% msg.ID %]&uniq=[% USER_CREDS.UNIQ %]'  onclick="return xmlhttpDel(this,'en','d-tr-[% msg.FILE_NAME %]')"><img border='0' src='/xvb/images/msg_delete.png' alt='delete' /></a>

				[% IF msg.IS_VOICE %]
					<a title='play' 
						onclick="return ShowPlayer('https://[% USER_CREDS.DOWNLOAD_IP %][% CGI_URL %]/msg_download/[% msg.ID %]/[% USER_CREDS.ACCESS_CODE %]/[% msg.FILE_NAME %]?media=mp3;type=listen' )"
						href="#"><img border='0' src='/xvb/images/msg_listen.png' alt='play' /></a>
				[% END %]
				[% IF msg.FILE_TYPE eq '30' %]
					<a title='Mark message as OLD' href='?action=msg_status&msg=[% msg.FILE_NAME %]&id=[% msg.ID %]&status=40&uniq=[% USER_CREDS.UNIQ %]'><img border='0'  src='/xvb/images/msg_status.png' alt='status' /></a>
				[% ELSIF msg.FILE_TYPE eq '40' %]
					<a title='Mark message as NEW' href='?action=msg_status&msg=[% msg.FILE_NAME %]&id=[% msg.ID %]&status=30&uniq=[% USER_CREDS.UNIQ %]'><img border='0'  src='/xvb/images/msg_status.png' alt='status' /></a>
				[% END %] 
			</td>
			<td>[% msg.DESCRIPTION | html %]</td>
		</tr>
		[% END %]
		<tr>
		[% IF MSG_NEXT ne '' %]
			<td align='right' colspan='9'>
				<a title='next page' href='?action=msg_list_all&duration=[% DURATION | html %]&id=[% VBOX_PREF.ID %]&msg_type=[% MSG_TYPE | html %]&from=[% MSG_NEXT %]&called_id=[% CALLED_ID | htmlstrict %]&caller_id=[% CALLER_ID | htmlstrict %]&from_time=[% FROM_TIME | html %]&to_time=[% TO_TIME | html %]&uniq=[% USER_CREDS.UNIQ %]'><img border='0'  src='/xvb/images/msg_next.png' alt='=&gt; [% MSG_NEXT %]' /></a>
			</td>
		[% ELSE %]
			<td colspan='9'>&nbsp;</td>
		[% END %]
		</tr>
		[% ELSE %]
		<tr>
			<td colspan='9'>&nbsp;</td>
		</tr>
		<tr>
			<td colspan='9' align='center'><h4>No messages</h4></td>
		</tr>
		<tr>
			<td colspan='9'>&nbsp;</td>
		</tr>
		[% END %]
	</table>
	</p>

	<script language='JavaScript'>listcolorer( 'd-tbl' );</script>

	<div id='shadow'><div id='loading'></div></div><div id='center'></div>
	</center>
</body>
</html>
	
